@model Nop.Plugin.Misc.NopStationTeams.Model.Employee;


@{
    Layout = "_ConfigurePlugin";
}

<html>
    <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
    </head>

    <body>
        
        <form method="post" enctype="multipart/form-data" >
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary">Add New Employee</h2>
                    <hr/>
                </div>


                <div class="mb-3 row p-1">
                    <label asp-for="Name" class="m-2"> </label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-dandger"></span>
                 </div>


                <div class="mb-3 row p-1">
                    <label asp-for="Designation" class="m-2"> </label>
                    <select name="Designation" id="Designation" class="form-select-inline">
                        <option value="Associate Software Engineer" selected>Associate Software Engineer</option>
                        <option value="Senior Software Engineer">Senior Software Engineer</option>
                        <option value="Team Leader">Senior Software Engineer</option>
                        <option value="Project manager">Senior Software Engineer</option>
                    </select>
                </div>

                  <div class="mb-3 row p-1">
                    <label asp-for="Image" class="m-2"> </label>
                    <input asp-for="Image" type="file" name="file" class="form-control"/>
                   </div>


                <div class="mb-3p-1">
                    <label asp-for="IsMVP" class="m-2"> </label>
                    <input asp-for="IsMVP"  type="checkbox" />
                    <span asp-validation-for="IsMVP" class="text-dandger"></span>
                </div>

                <div class="mb-3 p-1">
                    <label asp-for="IsCertified" class="m-2"> </label>
                    <input asp-for="IsCertified"  type="checkbox" />
                    <span asp-validation-for="IsCertified" class="text-dandger"></span>
                </div>

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" asp-controller="Plugin" asp-action="Configure" class="btn btn-primary">Create </button>
                    </div>

                    <div class="col-6 col-md-3">
                        <a asp-controller="Plugin" asp-action="Index" class="btn btn-outline-secondary">
                            Back to List
                        </a>
                    </div>

                </div>


        </div>

        </form>
     
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>

