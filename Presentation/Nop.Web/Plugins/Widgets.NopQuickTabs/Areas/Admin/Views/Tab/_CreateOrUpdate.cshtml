@model TabModel
@{

   @Html.HiddenFor(x => x.ProductId);
}

<div class="card-body">
        @(await Html.LocalizedEditorAsync<TabModel, TabLocalizedModel>("tab-localized",
                @<div>

                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="@Model.Locales[item].Title" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="@Model.Locales[item].Title" />
                            <span asp-validation-for="@Model.Locales[item].Title" />
                        </div>
                    </div>



                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="@Model.Locales[item].Description" />
                        </div>
                        <div class="col-md-9">
                           <nop-editor asp-for="@Model.Locales[item].Description" asp-template="RichEditor" />
                          <span asp-validation-for="@Model.Locales[item].Description"></span>
                        </div>
                    </div>
 
                    <input type="hidden" asp-for="@Model.Locales[item].LanguageId" />

                </div>



                 ,
                @<div>

                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="Title" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="Title" />
                            <span asp-validation-for="Title"></span>
                        </div>
                    </div>


                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="Description" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="Description" asp-template="RichEditor" />
                            <span asp-validation-for="Description"></span>
                        </div>
                    </div>


                    

                </div>

        ))

</div>


<div class="card-body">
    
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="ContentType" />
        </div>
        <div class="col-md-9">
            <nop-select asp-for="ContentType" asp-items="@Model.ContentTypeOptions" id="ContentTypeSelect" />
            <span asp-validation-for="ContentType"></span>
        </div>
    </div>


    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="DisplayOrder" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="DisplayOrder" />
            <span asp-validation-for="DisplayOrder"></span>
        </div>
    </div>


    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="IsActive" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="IsActive" />
            <span asp-validation-for="IsActive"></span>
        </div>
    </div>

 

</div>




